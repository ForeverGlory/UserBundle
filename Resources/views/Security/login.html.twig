{% extends "GloryUserBundle::layout.html.twig" %}

{% trans_default_domain 'GloryUserBundle' %}

{% block title %}登录{% endblock %}

{% block content %}
    {% block login_form %}
        <div class="login-form">
            <div class="login-title">帐号登录</div>
            <form action="{{ path("glory_user_check",{goto:app.request.get('goto')}) }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="login-username">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>

                <div class="login-password">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" />
                </div>

                <div class="login-remember">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /><label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>

                <div class="login-submit">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>

            </form>
        </div>
    {% endblock%}
    {% block login_link %}
        <div class="login-link">
            <a href="{{path('glory_user_reset')}}">{{'security.login.reset'|trans}}</a>
            <a href="{{path('glory_user_register')}}">{{'security.login.register'|trans}}</a>
        </div>
    {% endblock %}
{% endblock %}
